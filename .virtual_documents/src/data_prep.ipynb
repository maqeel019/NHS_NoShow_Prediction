import pandas as pd

file_path = "../data/hosp-epis-stat-outp-all-atte-2024-25-tab.xlsx"

# List of age group columns as they appear in Excel
age_columns = ['0','1-4','5-9','10-14','15','16','17','18','20-24','25-29','30-34',
               '35-39','40-44','45-49','50-54','55-59','60-64','65-69','70-74',
               '75-79','80-84','85-89','90-120','Unknown']

def load_and_melt(sheet_index, gender_label):
    # Load sheet without header
    df = pd.read_excel(file_path, sheet_name=sheet_index, header=None)
    
    # Drop first row (description)
    df = df.drop(index=0).reset_index(drop=True)
    
    # Rename first two columns
    df.rename(columns={0: 'Main_Specialty_Code', 1: 'Main_Specialty_Desc'}, inplace=True)
    
    # Keep only first two columns + age columns (ignore other NaNs)
    all_columns = ['Main_Specialty_Code', 'Main_Specialty_Desc'] + list(range(2, 2+len(age_columns)))
    df = df.iloc[:, :len(all_columns)]
    df.columns = ['Main_Specialty_Code', 'Main_Specialty_Desc'] + age_columns
    
    # Melting into long format
    df_long = df.melt(
        id_vars=['Main_Specialty_Code','Main_Specialty_Desc'],
        value_vars=age_columns,
        var_name='Age_Group',
        value_name='Attendance_Count'
    )
    
    df_long['Gender'] = gender_label

        # remove total-activity
    df_long = df_long[df_long['Main_Specialty_Desc'] != 'Total Activity']
    
    return df_long

# Load sheets
all_long = load_and_melt(1, 'All')
male_long = load_and_melt(2, 'Male')
female_long = load_and_melt(3, 'Female')



# Display
display(all_long.head())
display(male_long.head())
display(female_long.head())


