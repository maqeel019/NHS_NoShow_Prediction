import pandas as pd
import numpy as np

# Loading and cleaning the Ethnicity dataset
ethnic_df = pd.read_excel("../data/hosp-epis-stat-outp-ethn-cat-2024-25-tab.xlsx", sheet_name=0)
ethnic_df.columns = ethnic_df.columns.str.strip()
ethnic_clean = ethnic_df[ethnic_df['Ethnic Category'] != "Total Activity"].copy()
ethnic_clean = ethnic_df[ethnic_df['Ethnic Category'] != "Unknown"].copy()

ethnic_clean['Ethnic Category'] = ethnic_clean['Ethnic Category'].astype(str).str.strip()

ethnic_clean.rename(columns={
    'Ethnic Category': 'Ethnicity',
    'All Attendances': 'All',
    'Attended first appointment': 'Attended_First',
    'Attended first tele consultation': 'Attended_First_Tele',
    'Attended subsequent appointment': 'Attended_Subseq',
    'Attended subsequent tele consultation': 'Attended_Subseq_Tele',
    'Attended but first / subsequent / tele unknown': 'Attended_Unknown',
    'Percentage of all attendances': 'Percent'
}, inplace=True)

ethnicity_map = {
    'A': 'British (White)',
    'B': 'Irish (White)',
    'C': 'Any other White background',
    'D': 'White and Black Caribbean (Mixed)',
    'E': 'White and Black African (Mixed)',
    'F': 'White and Asian (Mixed)',
    'G': 'Any other Mixed background',
    'H': 'Indian (Asian or Asian British)',
    'J': 'Pakistani (Asian or Asian British)',
    'K': 'Bangladeshi (Asian or Asian British)',
    'L': 'Any other Asian background',
    'M': 'Caribbean (Black or Black British)',
    'N': 'African (Black or Black British)',
    'P': 'Any other Black background',
    'R': 'Chinese (other ethnic group)',
    'S': 'Any other ethnic group',
    '99': 'Not Known'
}

ethnic_clean['Ethnicity'] = ethnic_clean['Ethnicity'].map(ethnicity_map)
ethnic_clean = ethnic_clean.dropna(subset=['Ethnicity'])

# Computing No-Show probability per Ethnicity
ethnic_clean['NoShow_Prob'] = 1 - (
    (ethnic_clean['Attended_First'] + ethnic_clean['Attended_First_Tele'] +
     ethnic_clean['Attended_Subseq'] + ethnic_clean['Attended_Subseq_Tele']) /
    ethnic_clean['All']
)

#Computing Tele vs Face-to-Face proportions
ethnic_clean['Tele_Proportion'] = (
    ethnic_clean['Attended_First_Tele'] + ethnic_clean['Attended_Subseq_Tele']
) / ethnic_clean['All']

ethnic_clean['Face_Proportion'] = (
    ethnic_clean['Attended_First'] + ethnic_clean['Attended_Subseq']
) / ethnic_clean['All']




print("Ethnicity dataset enriched with realistic tele proportions:")
ethnic_clean.head(10)




